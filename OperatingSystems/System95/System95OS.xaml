                                                                        <DiscreteObjectKeyFrame KeyTime="0" Value="Black" />
                                                                    </ObjectAnimationUsingKeyFrames>
                                                                </Storyboard>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
                <TextBlock Text="&quot;Settings&quot; are in development!" FontFamily="ms-appx:///Assets/Fonts/progresspixel.tff#progresspixel" Foreground="Black" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border x:Name="SettingsWindowBorderRightAndBottom" BorderThickness="0,0,2,2" BorderBrush="Black"/>
            </Grid>
        </Grid>
        <Grid x:Name="Desktop" Background="#017777" Margin="0,0,0,43">

        </Grid>
        <Grid x:Name="StartMenu" Canvas.ZIndex="1" Background="#C0C0C0" Height="257" Width="246" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,39">
            <Border x:Name="StartBorderLeftAndTop" BorderThickness="2,2,0,0" BorderBrush="White"/>
