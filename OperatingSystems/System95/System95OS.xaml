                    <RotateTransform Angle="-90"/>
                </Grid.RenderTransform>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="System" VerticalAlignment="Center" FontWeight="Bold" FontFamily="ms-appx:///Assets/Fonts/progresspixel.tff#progresspixel" Margin="8,0,0,0" FontSize="22"/>
